<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/item_tv_show_width"
    android:layout_height="@dimen/item_tv_show_height"
    cardview:cardUseCompatPadding="true"
    cardview:cardElevation="4dp"
    cardview:cardCornerRadius="3dp"
    android:clipChildren="false">

    <ImageView
        android:id="@+id/item_tv_show_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/item_tv_show_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/black_translucent"
        android:ellipsize="end"
        android:gravity="bottom"
        android:maxLines="2"
        android:padding="@dimen/item_tv_show_title_padding"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</android.support.v7.widget.CardView>